<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="@dimen/radius_large"
    android:elevation="@dimen/elevation_card"
    android:background="@drawable/background_item_authorization"
    android:layout_marginVertical="@dimen/margin_vertical_large">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal_large"
        android:layout_marginVertical="@dimen/margin_vertical_medium">

        <TextView
            android:id="@+id/tv_receipt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_large"
            android:layout_marginVertical="@dimen/margin_vertical_medium"
            android:textColor="@color/hint"
            app:layout_constraintEnd_toStartOf="@+id/iv_accept"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Receiptid: dsdfsdfsdfsadsa-sfsadas" />

        <TextView
            android:id="@+id/tv_status_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_large"
            android:layout_marginVertical="@dimen/margin_vertical_medium"
            android:textColor="@color/hint"
            app:layout_constraintEnd_toStartOf="@+id/iv_accept"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_receipt_id"
            tools:text="status Desc: ppipipip" />

        <ImageView
            android:id="@+id/iv_accept"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:background="@drawable/ic_approved"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>